---
layout: "layout.liquid"
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - art
    - notes
    - about
    - drafts
    - ancestry
    - all
permalink: /tags/{{ tag }}/
---
<h1>Tagged “{{ tag }}”</h1>
<ol>
{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
  <li><a href="{{ post.url | url }}">{{ post.data.pageTitle }}</a>
  <p><span class="text--secondary small-caps">{{ post.date }}</span> &mdash; {{ post.data.metaDescription }}</p></li>
{% endfor %}
</ol>