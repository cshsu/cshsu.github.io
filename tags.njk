---
layout: "layout.njk"
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
permalink: /tags/{{ tag }}/
---
<p class="lead">Here are all articles tagged &ldquo;{{ tag }}&rdquo;. </p>
<ul class="list--articles">
{% set taglist = collections[ tag ] | reverse %}
{% for post in taglist %}
<li>
  <a href="{{ post.url }}" class="h2">{{ post.data.title }}</a>
  <div><span class="small-caps"><time datetime="{{ post.date | date('YYYY-MM-DD HH:mm') }}">{{ post.date | date("MMM DD, YYYY") }}</time> &mdash; <span class="article--tags">{% for tag in post.data.tags %}{% if tag != 'notes' %}<span> {{tag}}</span>{% endif %}{% endfor %}</span></span> <br>
      {{ post.data.description }}</div>
</li>
{% endfor %}
</ul>