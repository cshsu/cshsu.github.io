---
layout: "layout.liquid"
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
permalink: /tags/{{ tag }}/
---
<p class="lead">Here are all articles tagged with “{{ tag }}.” </p>
<ul class="list--articles">
{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
  <li><a href="{{ post.url | url }}">{{ post.data.pageTitle }}</a>
  <p>{{ post.data.metaDescription }}</p></li>
{% endfor %}
</ul>