---
pagination:
    data: art
    size: 1
    alias: art
permalink: "art/{{ art.group | slug }}/"
---

<figure>
    <a href="/art/{{ art.title | slug }}/"><img src="https://res.cloudinary.com/joshcrain/image/upload/c_scale,q_auto,w_742/art/{{ art.date | date('YYYY') }}/{{ art.file }}" alt="{{ art.alt }}" loading="lazy"></a>
    <figcaption>{{ art.title }}. {{ art.date | date("YYYY") }}. {{ art.medium }}. {{ art.description }}</figcaption>
</figure>   

{% for item in art.secondary %} 
<figure>
    <img src="https://res.cloudinary.com/joshcrain/image/upload/c_scale,q_auto,w_742/art/{{ item.date | date('YYYY') }}/{{ item.file }}" alt="{{ item.alt }}" loading="lazy">
    <figcaption>{{ item.title }}. {{ item.date | date("YYYY") }}. {{ item.medium }}. {{ item.description }}</figcaption>
</figure>   
{% endfor %}