<tr id="{{ item.activityId }}">
    <th scope="rowgroup" {% if (item.description) or (item.favorite == true) or (item.pr == true) %}rowspan="2"{% endif %}><a href="/about/running/#{{ item.activityId }}">{{ item.startTimeLocal | date("M/D/Y") }}</a><br> {{ item.startTimeLocal | date("h:mm A")}}</th>
    <td data-tblColumn="Distance">{{ item.distance | miles }} mi</td>
    <td data-tblColumn="Time">{{ item.duration | duration("mm:ss") }}</td>
    <td data-tblColumn="Pace">{{ ((item.duration)/(item.distance | miles)) | duration("m:ss") }}/mi</td>
    <td data-tblColumn="Heart Rate"><span>{{ item.averageHR }} <abbr title="beats per minute">bpm</abbr><br> ({{ item.maxHR }}&nbsp;Max)</span></td>
    <td data-tblColumn="VO2 Max">{% if item.vO2MaxValue %}{{ item.vO2MaxValue }} <abbr title="volume, oxygen, maximum">VO<sub>2</sub> Max</abbr>{% endif %}</td>
  </tr>
  {% if (item.description) or (item.favorite == true) or (item.pr == true) %}<tr class="has-colspan">
    <td colspan="5" data-tblColumn="Description">
      <span>{% if item.pr == true %}üèÜ&nbsp;New <abbr title="Personal Record">PR</abbr>!{% endif %} {% if item.description %}{{ item.description }}{% endif %}</span>
    </td>
  </tr>{% endif %}